<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Portal - Billing & Insurance</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/styles/Styles.css">
</head>

<body>
    <div class="portal-container">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <h2><i class="fas fa-hospital"></i> <span>HMS</span></h2>
            </div>
            <div class="user-info">
                <div class="user-avatar">
                    <%= user.name[0] %>
                </div>
                <div class="user-details">
                    <div class="user-name">
                        <%= user.name %>
                    </div>
                    <div class="user-id">Patient ID: <%= user._id %>
                    </div>
                </div>
            </div>
            <ul class="nav-links">
                <li><a href="/dashboard" class><i class="fas fa-th-large"></i> <span>Dashboard</span></a></li>
                <li><a href="/appointments" class><i class="fas fa-calendar-check"></i> <span>Appointments</span></a>
                </li>
                <li><a href="/medical_records"><i class="fas fa-file-medical"></i> <span>Medical Records</span></a>
                </li>
                <li><a href="/billing" class="active"><i class="fas fa-file-invoice-dollar"></i> <span>Billing &
                            Insurance</span></a></li>
                <li><a href="/documents"><i class="fas fa-folder-open"></i> <span>Documents</span></a></li>
                <li><a href="/patient-feedback"><i class="fas fa-procedures"></i> <span>Feedback</span></a></li>
                <li><a href="/profile"><i class="fas fa-user"></i> <span>Profile</span></a></li>
            </ul>
            <div class="sidebar-footer">
                <button class="logout-btn" onclick="window.location.href='/home'"><i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span></button>
            </div>
        </aside>

        <!-- Main Content Area -->
        <div class="main-content">
            <!-- Topbar -->
            <div class="topbar">
                <button id="menu-toggle" class="menu-toggle" onclick="toggleSidebar()">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="page-title">
                    <h1 id="page-title">Billing & Insurance</h1>
                </div>
                <div class="topbar-right">
                    <button class="notification-btn">
                        <i class="fas fa-bell"></i>
                        <div class="notification-badge">3</div>
                    </button>
                    <span>Welcome, <%= user.name.split(' ')[0] %></span>
                </div>
            </div>

            <!-- Page Content -->
            <div id="page-content active">
                <div class="content-grid">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-title">Recent Bills</h2>
                        </div>
                        <div class="card-content">
                            <div class="billing-item">
                                <div class="billing-info">
                                    <div class="billing-title">Consultation Fee</div>
                                    <div class="billing-date">March 28, 2025</div>
                                </div>
                                <div>
                                    <span class="billing-amount">$150.00</span>
                                    <span class="billing-status status-paid">Paid</span>
                                </div>
                            </div>
                            <div class="billing-item">
                                <div class="billing-info">
                                    <div class="billing-title">Lab Tests</div>
                                    <div class="billing-date">March 15, 2025</div>
                                </div>
                                <div>
                                    <span class="billing-amount">$75.00</span>
                                    <span class="billing-status status-pending">Pending</span>
                                </div>
                            </div>
                            <div class="billing-item">
                                <div class="billing-info">
                                    <div class="billing-title">X-Ray</div>
                                    <div class="billing-date">January 10, 2025</div>
                                </div>
                                <div>
                                    <span class="billing-amount">$200.00</span>
                                    <span class="billing-status status-paid">Paid</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-title">Insurance Information</h2>
                        </div>
                        <div class="card-content">
                            <div class="insurance-item">
                                <div class="insurance-header">
                                    <span class="insurance-provider">BlueCross BlueShield</span>
                                    <span class="insurance-status">Active</span>
                                </div>
                                <div class="insurance-number">Policy #: BCBS123456789</div>
                                <div class="insurance-details">Group #: 987654</div>
                                <div class="insurance-details">Coverage: 80%</div>
                                <div class="insurance-details">Expiration: Dec 31, 2025</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Payment Methods</h2>
                    </div>
                    <div class="card-content">
                        <div class="form-group">
                            <label for="card-holder">Card Holder Name</label>
                            <input type="text" id="card-holder" name="card-holder" value="John Doe">
                        </div>
                        <div class="form-row">
                            <div class="form-col">
                                <div class="form-group">
                                    <label for="card-number">Card Number</label>
                                    <input type="text" id="card-number" name="card-number" value="**** **** **** 4567">
                                </div>
                            </div>
                            <div class="form-col">
                                <div class="form-group">
                                    <label for="expiry">Expiry Date</label>
                                    <input type="text" id="expiry" name="expiry" value="12/26">
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <button type="button" class="btn btn-primary">Update Payment Info</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/script/Script.js"></script>
</body>

</html>