<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor Portal - Hospital Management System</title>
    <style>
        /* Reset and Base Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
            min-height: 100vh;
            position: relative;
            background-color: #f0f5ff;
        }

        /* Background Image */
        .background-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -2;
            background-image: url('<%= backgroundImageUrl %>');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .background-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.9);
            /* Light overlay */
            z-index: -1;
        }

        /* Main Container */
        .main-container {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background-color: #2c7dfa;
            color: white;
            padding: 20px 0;
            display: flex;
            flex-direction: column;
            box-shadow: 3px 0 10px rgba(0, 0, 0, 0.1);
            position: fixed;
            height: 100%;
            z-index: 100;
        }

        .doctor-profile {
            padding: 20px;
            text-align: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            margin-bottom: 20px;
        }

        .doctor-avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background-color: #fff;
            margin: 0 auto 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 36px;
            color: #2c7dfa;
        }

        .doctor-name {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .doctor-specialty {
            font-size: 14px;
            opacity: 0.8;
        }

        .sidebar-menu {
            list-style: none;
            padding: 0 15px;
            flex-grow: 1;
        }

        .sidebar-menu li {
            margin-bottom: 5px;
        }

        .sidebar-menu a {
            display: block;
            padding: 12px 15px;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .sidebar-menu a:hover,
        .sidebar-menu a.active {
            background-color: rgba(255, 255, 255, 0.2);
        }

        .sidebar-menu a i {
            margin-right: 10px;
        }

        .logout {
            padding: 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
        }

        .logout-btn {
            display: block;
            padding: 12px;
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .logout-btn:hover {
            background-color: rgba(255, 255, 255, 0.2);
        }

        /* Content Area */
        .content-area {
            flex: 1;
            margin-left: 250px;
            padding: 20px;
        }

        .welcome-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            margin-bottom: 20px;
        }

        .welcome-text h1 {
            font-size: 24px;
            color: #333;
        }

        .welcome-text p {
            color: #777;
        }

        .date-time {
            text-align: right;
            color: #777;
        }

        .widgets-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }

        .widget {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .widget-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .widget-title {
            font-size: 18px;
            color: #333;
        }

        .widget-action {
            color: #2c7dfa;
            text-decoration: none;
            font-size: 14px;
        }

        /* Appointments Section */
        .appointments-section {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 20px;
        }

        /* Calendar Styles */
        .calendar-widget {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .calendar-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .calendar-title {
            font-size: 18px;
            font-weight: bold;
        }

        .calendar-nav {
            display: flex;
            gap: 10px;
        }

        .calendar-nav-btn {
            background-color: #f0f0f0;
            border: none;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .calendar-nav-btn:hover {
            background-color: #2c7dfa;
            color: white;
        }

        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 10px;
        }

        .calendar-weekday {
            text-align: center;
            font-weight: bold;
            color: #777;
            padding: 5px;
        }

        .calendar-day {
            aspect-ratio: 1/1;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            cursor: pointer;
            position: relative;
            transition: all 0.3s;
        }

        .calendar-day:hover {
            background-color: #f0f5ff;
        }

        .calendar-day.has-appointments {
            border: 2px solid #2c7dfa;
        }

        .calendar-day.today {
            background-color: #2c7dfa;
            color: white;
        }

        .calendar-day.has-appointments::after {
            content: '';
            position: absolute;
            bottom: 5px;
            width: 5px;
            height: 5px;
            background-color: #2c7dfa;
            border-radius: 50%;
        }

        /* Appointments Details */
        .appointments-details {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .appointments-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .appointments-title {
            font-size: 18px;
            font-weight: bold;
        }

        .appointments-date {
            color: #777;
        }

        .appointments-list {
            max-height: 400px;
            overflow-y: auto;
        }

        .appointment-card {
            padding: 15px;
            border-radius: 10px;
            background-color: #f9fafc;
            margin-bottom: 15px;
            border-left: 4px solid #2c7dfa;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .appointment-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .appointment-time {
            display: inline-block;
            padding: 5px 10px;
            background-color: #e6f0ff;
            color: #2c7dfa;
            border-radius: 20px;
            font-size: 14px;
            margin-bottom: 10px;
        }

        .appointment-patient {
            font-weight: bold;
            margin-bottom: 10px;
        }

        .appointment-details {
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: #777;
            font-size: 14px;
        }

        .appointment-actions {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }

        .action-btn {
            padding: 8px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
            transition: background-color 0.3s;
        }

        .complete-btn {
            background-color: #4CAF50;
            color: white;
        }

        .complete-btn:hover {
            background-color: #3d8b40;
        }

        .reschedule-btn {
            background-color: #f0f0f0;
            color: #777;
        }

        .reschedule-btn:hover {
            background-color: #e0e0e0;
        }

        /* No Appointments Message */
        .no-appointments {
            text-align: center;
            padding: 40px 0;
            color: #777;
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .appointments-section {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .sidebar {
                width: 70px;
                overflow: hidden;
            }

            .doctor-profile,
            .doctor-name,
            .doctor-specialty {
                display: none;
            }

            .sidebar-menu a span {
                display: none;
            }

            .sidebar-menu a i {
                margin-right: 0;
                font-size: 20px;
            }

            .content-area {
                margin-left: 70px;
            }

            .logout-btn span {
                display: none;
            }
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }

        .modal.active {
            display: flex;
        }

        .modal-content {
            background-color: white;
            border-radius: 10px;
            width: 90%;
            max-width: 600px;
            max-height: 90vh;
            overflow-y: auto;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

        .modal-header {
            padding: 20px;
            border-bottom: 1px solid #f0f0f0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .modal-title {
            font-size: 20px;
            font-weight: bold;
        }

        .modal-close {
            background: none;
            border: none;
            font-size: 20px;
            cursor: pointer;
            color: #777;
        }

        .modal-body {
            padding: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
        }

        .form-control:focus {
            outline: none;
            border-color: #2c7dfa;
        }

        textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }

        .modal-footer {
            padding: 15px 20px;
            border-top: 1px solid #f0f0f0;
            text-align: right;
            display: flex;
            justify-content: flex-end;
            gap: 10px;
        }

        .modal-btn {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s;
        }

        .btn-secondary {
            background-color: #f0f0f0;
            color: #333;
        }

        .btn-secondary:hover {
            background-color: #ddd;
        }

        .btn-primary {
            background-color: #2c7dfa;
            color: white;
        }

        .btn-primary:hover {
            background-color: #1c6dea;
        }
    </style>
</head>

<body>
    <!-- Background container with overlay -->
    <div class="background-container"></div>
    <div class="background-overlay"></div>

    <div class="main-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="doctor-profile">
                <div class="doctor-avatar">
                    <%= doctor.name.charAt(0) %>
                </div>
                <div class="doctor-name">Dr. <%= doctor.name %>
                </div>
                <div class="doctor-specialty">
                    <%= doctor.specialty %>
                </div>
            </div>
            <ul class="sidebar-menu">
                <li><a href="/doctor/dashboard" class="active"><i>📊</i> <span>Dashboard</span></a></li>
                <li><a href="/doctor/appointments"><i>📅</i> <span>Appointments</span></a></li>
                <li><a href="/doctor/patients"><i>👨‍👩‍👧‍👦</i> <span>My Patients</span></a></li>
                <li><a href="/doctor/schedule"><i>⏰</i> <span>My Schedule</span></a></li>
                <li><a href="/doctor/prescriptions"><i>📝</i> <span>Prescriptions</span></a></li>
                <li><a href="/doctor/billing"><i>💰</i> <span>Billing</span></a></li>
                <li><a href="/doctor/profile"><i>⚙️</i> <span>Profile</span></a></li>
            </ul>
            <div class="logout">
                <a href="/logout" class="logout-btn"><i>🚪</i> <span>Logout</span></a>
            </div>
        </div>

        <!-- Content Area -->
        <div class="content-area">
            <!-- Welcome Bar -->
            <div class="welcome-bar">
                <div class="welcome-text">
                    <h1>Welcome, <%= doctor.name %>
                    </h1>
                    <p>Here's your schedule for today</p>
                </div>
                <div class="date-time">
                    <div class="current-date">
                        <%= new Date().toLocaleDateString('en-US', { weekday: 'long' , year: 'numeric' , month: 'long' ,
                            day: 'numeric' }) %>
                    </div>
                </div>
            </div>

            <!-- Widgets -->
            <div class="widgets-container">
                <div class="widget">
                    <div class="widget-header">
                        <div class="widget-title">Today's Appointments</div>
                        <a href="/doctor/appointments" class="widget-action">View All</a>
                    </div>
                    <div><strong>
                            <%= todayAppointments.length %>
                        </strong> appointments scheduled</div>
                </div>
                <div class="widget">
                    <div class="widget-header">
                        <div class="widget-title">Pending Reports</div>
                        <a href="/doctor/reports" class="widget-action">View All</a>
                    </div>
                    <div><strong>
                            <%= pendingReports %>
                        </strong> reports to complete</div>
                </div>
                <div class="widget">
                    <div class="widget-header">
                        <div class="widget-title">Upcoming Consultations</div>
                        <a href="/doctor/consultations" class="widget-action">View All</a>
                    </div>
                    <div><strong>
                            <%= upcomingConsultations %>
                        </strong> consultations this week</div>
                </div>
            </div>

            <!-- Appointments Section -->
            <div class="appointments-section">
                <!-- Calendar -->
                <div class="calendar-widget">
                    <div class="calendar-header">
                        <div class="calendar-title">
                            <%= new Date().toLocaleDateString('en-US', { month: 'long' , year: 'numeric' }) %>
                        </div>
                        <div class="calendar-nav">
                            <button class="calendar-nav-btn prev-month">◀</button>
                            <button class="calendar-nav-btn next-month">▶</button>
                        </div>
                    </div>
                    <div class="calendar-grid">
                        <!-- Weekdays -->
                        <div class="calendar-weekday">Sun</div>
                        <div class="calendar-weekday">Mon</div>
                        <div class="calendar-weekday">Tue</div>
                        <div class="calendar-weekday">Wed</div>
                        <div class="calendar-weekday">Thu</div>
                        <div class="calendar-weekday">Fri</div>
                        <div class="calendar-weekday">Sat</div>

                        <% /* This is where calendar days would be generated by JavaScript */ %>
                            <% const today=new Date().getDate(); %>
                                <% for(let i=1; i <=31; i++) { %>
                                    <div class="calendar-day <%= i === today ? 'today' : '' %> <%= appointmentDates.includes(i) ? 'has-appointments' : '' %>"
                                        data-date="<%= i %>">
                                        <%= i %>
                                    </div>
                                    <% } %>
                    </div>
                </div>

                <!-- Appointments Details -->
                <div class="appointments-details">
                    <div class="appointments-header">
                        <div class="appointments-title">Upcoming Appointments</div>
                        <div class="appointments-date">
                            <%= new Date().toLocaleDateString('en-US', { weekday: 'long' , month: 'long' ,
                                day: 'numeric' }) %>
                        </div>
                    </div>

                    <div class="appointments-list">
                        <% if (todayAppointments.length===0) { %>
                            <div class="no-appointments">
                                <p>No appointments scheduled for today.</p>
                            </div>
                            <% } else { %>
                                <% todayAppointments.forEach(appointment=> { %>
                                    <div class="appointment-card" data-id="<%= appointment.id %>">
                                        <div class="appointment-time">
                                            <%= appointment.time %>
                                        </div>
                                        <div class="appointment-patient">
                                            <%= appointment.patientName %> - <%= appointment.purpose %>
                                        </div>
                                        <div class="appointment-details">
                                            <span>Age: <%= appointment.patientAge %></span>
                                            <span>Patient ID: <%= appointment.patientId %></span>
                                        </div>
                                        <div class="appointment-actions">
                                            <button class="action-btn complete-btn"
                                                data-id="<%= appointment.id %>">Complete Appointment</button>
                                            <button class="action-btn reschedule-btn"
                                                data-id="<%= appointment.id %>">Reschedule</button>
                                        </div>
                                    </div>
                                    <% }) %>
                                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Prescription Modal -->
    <div class="modal" id="prescriptionModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Add Prescription</h2>
                <button class="modal-close">&times;</button>
            </div>
            <div class="modal-body">
                <form id="prescriptionForm" action="/doctor/prescriptions/add" method="POST">
                    <input type="hidden" id="appointmentId" name="appointmentId">
                    <input type="hidden" id="patientId" name="patientId">

                    <div class="form-group">
                        <label class="form-label" for="diagnosis">Diagnosis</label>
                        <input type="text" class="form-control" id="diagnosis" name="diagnosis" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="prescription">Prescription & Medications</label>
                        <textarea class="form-control" id="prescription" name="prescription" required></textarea>
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="notes">Doctor's Notes</label>
                        <textarea class="form-control" id="notes" name="notes"></textarea>
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="followUp">Follow-up Date (if needed)</label>
                        <input type="date" class="form-control" id="followUp" name="followUp">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="modal-btn btn-secondary" id="closeModal">Cancel</button>
                <button class="modal-btn btn-primary" id="continueToPresc">Continue</button>
            </div>
        </div>
    </div>

    <!-- Billing Modal -->
    <div class="modal" id="billingModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Billing Information</h2>
                <button class="modal-close">&times;</button>
            </div>
            <div class="modal-body">
                <form id="billingForm" action="/doctor/billing/add" method="POST">
                    <input type="hidden" id="prescriptionId" name="prescriptionId">

                    <div class="form-group">
                        <label class="form-label" for="consultationFee">Consultation Fee</label>
                        <input type="number" class="form-control" id="consultationFee" name="consultationFee" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="medicationFee">Medication Fee (if applicable)</label>
                        <input type="number" class="form-control" id="medicationFee" name="medicationFee" value="0">
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="otherCharges">Other Charges</label>
                        <input type="number" class="form-control" id="otherCharges" name="otherCharges" value="0">
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="billNotes">Notes</label>
                        <textarea class="form-control" id="billNotes" name="billNotes"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="modal-btn btn-secondary" id="backToPrescription">Back</button>
                <button class="modal-btn btn-primary" id="completeProcess">Complete</button>
            </div>
        </div>
    </div>

    <script>
        // Sample JavaScript for functionality (you'll need to integrate with your backend)
        document.addEventListener('DOMContentLoaded', function () {
            // Variables
            const completeBtns = document.querySelectorAll('.complete-btn');
            const prescriptionModal = document.getElementById('prescriptionModal');
            const billingModal = document.getElementById('billingModal');
            const closeModalBtns = document.querySelectorAll('.modal-close');
            const closeModalBtn = document.getElementById('closeModal');
            const continueToPresc = document.getElementById('continueToPresc');
            const backToPrescription = document.getElementById('backToPrescription');
            const completeProcess = document.getElementById('completeProcess');

            // Calendar day click
            const calendarDays = document.querySelectorAll('.calendar-day');
            calendarDays.forEach(day => {
                day.addEventListener('click', function () {
                    const date = this.getAttribute('data-date');
                    // Here you would load appointments for the selected date
                    // This would typically be an AJAX call to your backend

                    // For demonstration:
                    document.querySelector('.appointments-date').textContent =
                        new Date(new Date().getFullYear(), new Date().getMonth(), date)
                            .toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric' });
                });
            });

            // Complete Appointment Button Click
            completeBtns.forEach(btn => {
                btn.addEventListener('click', function () {
                    const appointmentId = this.getAttribute('data-id');

                    // Set hidden fields in the form
                    document.getElementById('appointmentId').value = appointmentId;

                    // For demonstration, we'd get the patient ID from the appointment data
                    // Normally this would be fetched from your appointment object
                    document.getElementById('patientId').value = "SAMPLE_PATIENT_ID";

                    // Show prescription modal
                    prescriptionModal.classList.add('active');
                });
            });

            // Continue to Billing
            continueToPresc.addEventListener('click', function () {
                // Normally you would validate and submit the prescription form here
                // For demo purposes, we'll just show the billing modal
                prescriptionModal.classList.remove('active');

                // Set the prescription ID (this would come from your backend after saving the prescription)
                document.getElementById('prescriptionId').value = "SAMPLE_PRESCRIPTION_ID";

                billingModal.classList.add('active');
            });

            // Back to Prescription
            backToPrescription.addEventListener('click', function () {
                billingModal.classList.remove('active');
                prescriptionModal.classList.add('active');
            });

            // Complete the whole process
            completeProcess.addEventListener('click', function () {
                // Here you would submit the billing form
                // For demo purposes, we'll just close the modal
                billingModal.classList.remove('active');

                // You might want to show a success message or refresh the appointments list
                alert('Appointment completed, prescription and billing information saved!');

                // In a real application, you would update the UI to reflect the completed appointment
            });

            // Close modals
            closeModalBtns.forEach(btn => {
                btn.addEventListener('click', function () {
                    prescriptionModal.classList.remove('active');
                    billingModal.classList.remove('active');
                });
            });

            closeModalBtn.addEventListener('click', function () {
                prescriptionModal.classList.remove('active');
            });
        });
    </script>
</body>

</html>